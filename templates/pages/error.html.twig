{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col mb-4 p-0">
                <h1 class="pb-4 text-center border-bottom">{% if pageTitle is defined and pageTitle %}{{ pageTitle }}{% else %}An Error Occurred{% endif %}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p class="text-center">{% if message is defined and message %}{{ message }}{% endif %}</p>
            </div>
        </div>
    </div>
{% endblock %}